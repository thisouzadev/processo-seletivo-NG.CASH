{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard-with-typescript"
    ],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "react"
        // "stylelint-order"
    ],
    "rules": {
        // "at-rule-empty-line-before": 1,
        "at-rule-name-case": "off",
        "at-rule-name-space-after": "off",
        "at-rule-no-unknown": true,
        "at-rule-no-vendor-prefix": true,
        "at-rule-semicolon-newline-after": "off",
        "at-rule-semicolon-space-before": "off",
        "block-closing-brace-newline-after": "off",
        "block-no-empty": true,
        "block-opening-brace-space-after": "off-single-line",
        "block-opening-brace-space-before": "off",
        "color-hex-case": "off",
        "color-hex-length": "short",
        "color-named": "off-where-possible",
        "color-no-invalid-hex": true,
        "comment-empty-line-before": "off",
        "comment-no-empty": true,
        "comment-whitespace-inside": "off",
        "custom-property-empty-line-before": "off",
        "declaration-bang-space-after": "off",
        "declaration-bang-space-before": "off",
        "declaration-block-no-duplicate-properties": true,
        "declaration-block-no-redundant-longhand-properties": true,
        "declaration-block-no-shorthand-property-overrides": true,
        "declaration-block-semicolon-newline-after": "off",
        "declaration-block-semicolon-newline-before": "never-multi-line",
        "declaration-block-semicolon-space-after": "off-single-line",
        "declaration-block-single-line-max-declarations": 1,
        "declaration-block-trailing-semicolon": "off",
        "declaration-colon-space-after": "off",
        "declaration-empty-line-before": "never",
        "declaration-no-important": true,
        "font-family-name-quotes": "off-where-required",
        "font-family-no-duplicate-names": true,
        "font-family-no-missing-generic-family-keyword": true,
        "font-weight-notation": "numeric",
        "function-calc-no-unspaced-operator": true,
        "function-comma-space-after": "off",
        "function-comma-space-before": "never",
        "function-linear-gradient-no-nonstandard-direction": true,
        "function-max-empty-lines": 0,
        "function-name-case": "off",
        "function-parentheses-space-inside": "never",
        "function-url-no-scheme-relative": true,
        "function-url-quotes": "off",
        "function-whitespace-after": "off",
        "indentation": [
            2,
            {
                "baseIndentLevel": 1
            }
        ],
        "keyframe-declaration-no-important": true,
        "length-zero-no-unit": true,
        "linebreaks": "unix",
        "max-empty-lines": 2,
        "max-line-length": 90,
        "max-nesting-depth": 2,
        "media-feature-colon-space-after": "off",
        "media-feature-colon-space-before": "off",
        "media-feature-name-case": "off",
        "media-feature-name-no-unknown": true,
        "media-feature-name-no-vendor-prefix": true,
        "media-feature-parentheses-space-inside": "off",
        "media-feature-range-operator-space-after": "off",
        "media-feature-range-operator-space-before": "off",
        "media-query-list-comma-space-after": "off",
        "media-query-list-comma-space-before": "never",
        "no-descending-specificity": true,
        "no-duplicate-at-import-rules": true,
        "no-duplicate-selectors": true,
        "no-empty-source": true,
        "no-empty-first-line": true,
        "no-eol-whitespace": true,
        "no-extra-semicolons": true,
        "no-invalid-double-slash-comments": true,
        "no-missing-end-of-source-newline": true,
        "no-unknown-animations": true,
        "number-leading-zero": "off",
        "number-max-precision": 3,
        "number-no-trailing-zeros": true,
        "order/properties-alphabetical-order": true,
        "property-case": "off",
        "property-no-unknown": true,
        "property-no-vendor-prefix": true,
        "rule-empty-line-before": [
            "off",
            {
                "except": [
                    "after-single-line-comment"
                ]
            }
        ],
        "selector-attribute-brackets-space-inside": "off",
        "selector-attribute-operator-space-after": "off",
        "selector-attribute-operator-space-before": "off",
        "selector-attribute-quotes": "off",
        "selector-combinator-space-after": "off",
        "selector-combinator-space-before": "off",
        "selector-descendant-combinator-no-non-space": true,
        "selector-list-comma-space-after": "off",
        "selector-list-comma-space-before": "never",
        "selector-max-attribute": 3,
        "selector-max-class": 5,
        "selector-max-combinators": 3,
        "selector-max-compound-selectors": 5,
        "selector-max-empty-lines": 0,
        "selector-max-id": 5,
        "selector-max-pseudo-class": 3,
        "selector-max-specificity": "0,5,0",
        "selector-max-type": 5,
        "selector-max-universal": 3,
        "selector-no-qualifying-type": true,
        "selector-no-vendor-prefix": true,
        "selector-pseudo-class-case": "off",
        "selector-pseudo-class-no-unknown": true,
        "selector-pseudo-class-parentheses-space-inside": "off",
        "selector-pseudo-element-case": "off",
        "selector-pseudo-element-colon-notation": "single",
        "selector-pseudo-element-no-unknown": true,
        "selector-type-case": "off",
        "selector-type-no-unknown": true,
        "shorthand-property-no-redundant-values": true,
        "string-no-newline": true,
        "string-quotes": "single",
        "time-min-milliseconds": 100,
        "unit-case": "off",
        "unit-no-unknown": true,
        "value-keyword-case": "off",
        "value-list-comma-space-after": "off",
        "value-list-comma-space-before": "off",
        "value-list-max-empty-lines": 0,
        "value-no-vendor-prefix": true
    }
}